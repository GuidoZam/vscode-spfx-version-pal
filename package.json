{
  "name": "vscode-spfx-version-pal",
  "displayName": "SPFx Version Pal",
  "description": "Shows the SharePoint Framework (SPFx) version in the status bar",
  "version": "0.0.1",
  "publisher": "your-publisher-name",
  "repository": {
    "type": "git",
    "url": "https://github.com/GuidoZam/vscode-spfx-version-pal.git"
  },
  "keywords": [
    "sharepoint",
    "spfx",
    "sharepoint framework",
    "version",
    "status bar"
  ],
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "spfxVersionPal.refresh",
        "title": "Refresh SPFx Version",
        "category": "SPFx Version Pal"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/semver": "^7.7.1",
    "@types/vscode": "^1.74.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "semver": "^7.5.4"
  }
}
