{
	"name": "vscode-spfx-version-pal",
	"displayName": "SPFx Version Pal",
	"description": "Shows the SharePoint Framework (SPFx) version of the current project in the status bar",
	"version": "0.1.1",
	"publisher": "guidozam",
	"license": "MIT",
	"icon": "assets/icon.png",
	"preview": false,
	"galleryBanner": {
		"theme": "light"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/GuidoZam/vscode-spfx-version-pal.git"
	},
	"bugs": {
		"url": "https://github.com/GuidoZam/vscode-spfx-version-pal/issues"
	},
	"homepage": "https://github.com/GuidoZam/vscode-spfx-version-pal#readme",
	"keywords": [
		"sharepoint",
		"spfx",
		"sharepoint framework",
		"version",
		"status bar"
	],
	"engines": {
		"vscode": "^1.74.0",
		"node": ">=18.0.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "spfxVersionPal.refresh",
				"title": "Refresh SPFx Version",
				"category": "SPFx Version Pal"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "npx tsc -p . --outDir out",
		"watch-tests": "npx tsc -p . --outDir out --watch",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"lint": "npx eslint src --ext ts",
		"test": "node ./out/test/runTest.js",
		"test:ci": "xvfb-run -a node ./out/test/runTest.js",
		"set-preview": "node scripts/set-preview.js",
		"set-preview:true": "node scripts/set-preview.js true",
		"set-preview:false": "node scripts/set-preview.js false",
		"vsce:package": "vsce package",
		"vsce:package:prerelease": "vsce package --pre-release",
		"vsce:publish": "vsce publish",
		"vsce:publish:prerelease": "vsce publish --pre-release"
	},
	"devDependencies": {
		"@types/glob": "^8.1.0",
		"@types/mocha": "^10.0.10",
		"@types/node": "20.x",
		"@types/semver": "^7.7.1",
		"@types/vscode": "^1.74.0",
		"@typescript-eslint/eslint-plugin": "^5.59.1",
		"@typescript-eslint/parser": "^5.59.1",
		"@vscode/test-electron": "^2.3.0",
		"@vscode/vsce": "^3.7.1",
		"eslint": "^8.39.0",
		"glob": "^8.1.0",
		"mocha": "^10.2.0",
		"ts-loader": "^9.5.1",
		"typescript": "^4.9.4",
		"webpack": "^5.94.0",
		"webpack-cli": "^5.1.4"
	},
	"dependencies": {
		"semver": "^7.5.4"
	}
}
